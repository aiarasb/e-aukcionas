{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Nustatymai</h2>
        <div class="row">
            <div class="col-md-4">
                <ul>
                    <li><a href="#" id="change-password">Keisti slaptažodį</a></li>
                    <li><a href="#" id="change-email">Keisti El. pašto adresą</a></li>
                    <li>Redaguoti kontaktinius duomenis</li>
                    {% if user.role >= 3 %}
                        <li></li>
                        <li>Visų prekių sąrašas</li>
                        <li>Nepatvirtintų prekių sąrašas</li>
                    {% endif %}
                    {% if user.role >= 5 %}
                        <li></li>
                        <li>Vartotojų sąrašas</li>
                    {% endif %}
                </ul>
            </div>
            <div class="col-md-8">
                <div class="change-form" id="change-password-form" style="display: none;">
                    {{ form_start(passwordForm) }}
                        <div class="form-group">
                            <label for="comment">Senas slaptažodis:</label>
                            {{ form_widget(passwordForm.oldPassword, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        <div class="form-group">
                            <label for="comment">Naujas slaptažodis:</label>
                            {{ form_widget(passwordForm.newPassword, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Keisti</button>
                    {{ form_end(passwordForm) }}
                </div>
                <div class="change-form" id="change-email-form" style="display: none;">
                    {{ form_start(emailForm) }}
                        <div class="form-group">
                            <label for="comment">Naujas el. pašto adresas:</label>
                            {{ form_widget(emailForm.email, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Keisti</button>
                    {{ form_end(emailForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_inline %}
    {{ parent() }}

    <script type="text/javascript">
        $(function () {
            $("#change-password").click(function (e) {
                e.preventDefault();
                $(".change-form").hide();
                $("#change-password-form").show("fast");
            });

            $("#change-email").click(function (e) {
                e.preventDefault();
                $(".change-form").hide();
                $("#change-email-form").show("fast");
            });
        });
    </script>

{% endblock %}
